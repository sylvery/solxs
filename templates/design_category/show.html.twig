{% extends 'base.html.twig' %}

{% block title %}Design Category{% endblock %}

{% block body %}
    <h1>Design Category</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ design_category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ design_category.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ design_category.description }}</td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('design_category_index') }}">back to list</a>
        <a href="{{ path('design_category_edit', {'id': design_category.id}) }}">edit</a>
        {{ include('design_category/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
